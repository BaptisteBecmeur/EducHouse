<div class="container-signup">
  <div class="container-fluid">
    <div class="row">
      <div class= " col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 deviseform-signup">
        <div class="deviseform-bg">
          <h3 class="text-center">S'inscrire</h3><br/>

          <%= render "devise/shared/links" %>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
          <div class="form-inputs">
              <div class="row">

          </div>
            <%= f.input :email, label: 'Email', required: true, autofocus: true %>
            <%= f.input :password, label: 'Mot de passe', required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: 'Confirmation du mot de passe', required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn login-btn" %>
          </div>
          <% end %><br/>
            <div class="text-center">
              <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end -%>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


